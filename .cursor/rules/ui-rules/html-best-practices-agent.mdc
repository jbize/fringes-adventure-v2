    <!-- No semantic structure -->
    <div class="nav">
      <a href="#">Home</a>
      <a href="#">About</a>
    </div>
  </div>

  <!-- Bad - Poor form structure -->
  <div class="form">
    <input type="text" placeholder="Enter name">
    <!-- No labels or proper structure -->
